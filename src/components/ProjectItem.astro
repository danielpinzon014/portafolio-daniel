---
import { projects } from '../data/Projects';
import { ViewTransitions } from 'astro:transitions';

export interface Props {
  id:string;
  title: string;
  img: string;
  type: string;
}

const { id, title, img, type } = Astro.props;

---

  <div class="w-full h-1/2 py-4 px-4 mx-auto max-w-screen-xl lg:py-4 hover:scale-105  transition duration-700 ease-in-out">
    <div class="grid md:grid-cols-1 gap-4">
      <div
        class="bg-gray-200 rounded-lg p-3 md:p-6 hover:bg-gray-100  shadow-lg"
      >
      <a href="#" class="bg-gradient-to-r from-purple-400 to-pink-600 text-white text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded-md dark:bg-gray-700 mb-2">
        <svg class="w-2.5 h-2.5 mr-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 18">
          <path d="M17 11h-2.722L8 17.278a5.512 5.512 0 0 1-.9.722H17a1 1 0 0 0 1-1v-5a1 1 0 0 0-1-1ZM6 0H1a1 1 0 0 0-1 1v13.5a3.5 3.5 0 1 0 7 0V1a1 1 0 0 0-1-1ZM3.5 15.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2ZM16.132 4.9 12.6 1.368a1 1 0 0 0-1.414 0L9 3.55v9.9l7.132-7.132a1 1 0 0 0 0-1.418Z" />
        </svg>
        {type}
      </a>
      <a
          class="text-blue-600 dark:text-blue-500 hover:underline font-medium text-lg inline-flex items-center"
          href={`/${id}`}
        >
          <img
            alt={`Portada del libro ${title}`}
            class="aspect-2/4 h-full object-cover w-full max-w-full rounded"
            src={img}
            transition:name="img-prject"
            transition:animate="fade"
          />
          
        </a>
        <h2 class="text-gray-900 text-lg font-extrabold m-2">
          {title}
        </h2>
      </div>
    </div>
  </div>
  <ViewTransitions/>